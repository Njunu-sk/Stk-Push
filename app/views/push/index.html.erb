<div>
 <div>
   <%= form_with url: payment_path do |form| %>
     <div class="field">
       <label>Amount</label>
       <%= form.number_field(:amount, in: 1..5, step: 1) %>
     </div>
     <div class="field">
       <label>Phone Number</label>
       <%= form.telephone_field(:phone_number) %>
     </div>
     <%= form.submit "Push Stk" %>
   <% end %>
   <br/>
   <div>
     <p>All transactions are made using the <a href="https://developer.safaricom.co.ke/docs/">Safaricom API</a>(sandbox env).</p>
   </div>
 </div>
 <div>
   <table>
     <thead>
       <tr>
         <th>Amount</th>
         <th>Phone</th>
         <th>State</th>
         <th>Code</th>
       </tr>
     </thead>
     <tbody>
       <% @payments.each do |pay| %>
         <tr>
           <td>
             <%= pay.amount %>
           </td>
           <td>
             <%= pay.phone_number %>
           </td>
           <td>
             <%= pay.state %>
           </td>
           <td>
             <%= pay.code %>
           </td>
         </tr>
       <% end %>
     </tbody>
   </table>
 </div>
</div>
